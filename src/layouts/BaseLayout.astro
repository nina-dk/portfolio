---
import Header from '../components/Header.svelte';
import TitleSection from '../components/TitleSection.astro';
import Footer from '../components/Footer.svelte';
import '../styles/global.css';

const { lang, title, description } = Astro.props;
---

<!doctype html>
<html class="bg-gray-50" lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="alternate" hreflang="en" href="https://localhost:4321/" />
    <link rel="alternate" hreflang="el" href="https://localhost:4321/el" />
    <link rel="icon" type="image/svg+xml" href="/favicon-32x32.png" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="font-mono bg-[url('../assets/background.svg')] bg-cover p-3 md:p-6">
    <Header client:only lang={lang} />
    <slot />
    <Footer />
    <script>
      import '../scripts/menu';
    </script>
  </body>
</html>
