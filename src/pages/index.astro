---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';
import type { MDXInstance } from 'astro';

interface PageFrontmatter {
  title: string;
  description: string;
}

const { frontmatter, Content } = Object.values(
  import.meta.glob('../content/en/home.mdx', { eager: true }),
)[0] as MDXInstance<PageFrontmatter>;
---

<BaseLayout title="Antonina Kallinteri" lang="en" description={frontmatter.title}>
  <section class="prose max-w-full m-2">
    <h1>{frontmatter.title}</h1>
    <h2>{frontmatter.description}</h2>
    <Content />
  </section>
</BaseLayout>
